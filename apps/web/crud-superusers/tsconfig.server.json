{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist/server",
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/server/**/*.ts", "src/types/**/*.d.ts"]
}
